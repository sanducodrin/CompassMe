<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#FF000000</color>
    <color name="grey">#8F8E8E</color>
    <color name="primary">#1C2120</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="secondry">#FFFFFF</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="text">#4D4C4C</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">CompassMe</string>
    <style name="CustomMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:text">Logare</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>
    <style name="CustomTextInputEditTextEmail" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColorHint">@color/text</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>
    <style name="CustomTextInputEditTextPassword" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColorHint">@color/text</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:inputType">textPassword</item>
    </style>
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/grey</item>
        <item name="hintTextColor">@color/text</item>
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
    </style>
    <style name="Theme.CompassMe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
    </style>
</resources>